<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rus.warehouse.trading_company.controllers.MainController">
   <children>
      <BorderPane fx:id="purchasePanel" onMouseClicked="#purchClick" prefHeight="600.0" prefWidth="300.0" styleClass="main">
         <center>
            <ImageView fitWidth="232.0" pickOnBounds="true" preserveRatio="true" styleClass="main" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@images/factory.png" />
               </image>
            </ImageView>
         </center>
         <padding>
            <Insets bottom="50.0" left="30.0" right="30.0" top="50.0" />
         </padding>
         <bottom>
            <Label text="Закупки" BorderPane.alignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </bottom>
      </BorderPane>
      <BorderPane fx:id="warehousePanel" onMouseClicked="#warehouseClick" prefHeight="600.0" prefWidth="300.0" styleClass="main">
         <center>
            <ImageView fitWidth="232.0" pickOnBounds="true" preserveRatio="true" styleClass="main" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@images/warehouse.png" />
               </image>
            </ImageView>
         </center>
         <padding>
            <Insets bottom="50.0" left="30.0" right="30.0" top="50.0" />
         </padding>
         <bottom>
            <Label text="Склад" BorderPane.alignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </bottom>
      </BorderPane>
      <BorderPane fx:id="orderPanel" onMouseClicked="#OrderClick" prefHeight="600.0" prefWidth="300.0" styleClass="main">
         <center>
            <ImageView fitWidth="232.0" pickOnBounds="true" preserveRatio="true" styleClass="main" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@images/truck.png" />
               </image>
            </ImageView>
         </center>
         <padding>
            <Insets bottom="50.0" left="30.0" right="30.0" top="50.0" />
         </padding>
         <bottom>
            <Label text="Поставки" BorderPane.alignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </bottom>
      </BorderPane>
   </children>
</HBox>
